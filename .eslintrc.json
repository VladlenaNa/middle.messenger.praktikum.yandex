{
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "env": {
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": ["error", 4],
      "eol-last": "error",
      "quotes": ["error", "double"],
      "padded-blocks": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-this-alias": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".ts"]
        }
      }
    }
  }
